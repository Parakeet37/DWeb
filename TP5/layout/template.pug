extends layout

block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-grey
                h1= obra.titulo
            .w3-container
                h3= obra.compositor
                table.w3-table.w3-bordered
                    tr
                        th Instrumento
                        th Partitura
                        th Voz
                        th Clave
                        th Afinação
                    if obra.instrumentos
                        each instrumento in obra.instrumentos
                            tr
                                td= instrumento.nome
                                td= instrumento.partitura.path
                                if instrumento.partitura.voz
                                    td=instrumento.partitura.voz
                                else
                                    td
                                if instrumento.partitura.clave
                                    td=instrumento.partitura.clave
                                else
                                    td
                                if instrumento.partitura.afinacao
                                    td=instrumento.partitura.afinacao
                                else
                                    td
            footer.w3-container.w3-light-grey
                a(href="http://localhost:5000/") Voltar à página inicial
                address Gerado por PubsApp