extends layout
block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                form.w3-container(action="/postEsconder" method="POST")
                    label.w3-teal(for="id")
                        b ID da tarefa
                    input.w3-input.w3-border.w3-light-grey(type="text" name="id" required)
                    select.w3-select(name='escondida' required)
                        option(value='true') Esconder
                        option(value='false') Mostrar
                    input.w3-btn.w3-blue-grey(type="submit" value="Enviar")
                a.w3-btn.w3-blue(href="http://localhost:5000/") Voltar ao in√≠cio
            footer.w3-container.w3-teal
                address Gerado por FormApp