extends layout
block corpo
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                if lista.length
                    table.w3-table
                        tr
                            th ID
                            th Data de registo
                            th Prazo de conclusão
                            th Descrição
                            th Tipo de tarefa
                        each tarefa in lista
                            if !tarefa.escondida
                                tr
                                    td= tarefa.id
                                    td= tarefa.data_registo
                                    td= tarefa.prazo
                                    td= tarefa.descricao
                                    td= tarefa.tipo
                .w3-container
                    a.w3-btn.w3-blue(href="http://localhost:5000/regista") Criar nova tarefa
                    a.w3-btn.w3-red(href="http://localhost:5000/esconde") Apagar tarefa
            footer.w3-container.w3-teal
                address Gerado por FormApp